doctype html
html(lang="en")
  head
    title #{pageTitle} | #{siteTitle}
    link(rel="stylesheet", href="https://unpkg.com/mvp.css")
    link(rel="stylesheet", href="/css/styles.css")
  body
    header
      h1=pageTitle
      nav
        menu(class="nav")
          li
            a(href="/") Home
          if !isLoggedIn
            li
              a(href="/join") Join
            li
              a(href="/login") Login
          li
            a(href="/profile") Profile
          li
            a(href="/users") Users
    main
      block content
    include ../partial/footer.pug